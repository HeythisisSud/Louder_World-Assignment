generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model OtpVerification {
  id        String   @id @default(uuid())
  email     String
  eventId   String
  otp       String
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Event{
  id       String  @id @default(uuid())
  title     String
  dateTime  DateTime?
  venueName String?
  address  String?
  createdAt DateTime @default(now())
  city      String   @default("Sydney")
  description String?
  category  String[]
  organizer  String?
  imageUrl  String?
  price String?
  sourceName  String?
  sourceUrl   String  @unique

  status  String   @default("new")
  lastScrapedAt DateTime @default(now())
  importedAt  DateTime?
  importedby  String?
  importNotes String?

  TicketClicks  TicketClick[]

}


model TicketClick{
  id    String  @id @default(uuid())
  email String
  consent  Boolean
  eventId  String
  event  Event   @relation(fields: [eventId], references: [id])
  
  createdAt DateTime @default(now())
}


model User {
  id        String   @id @default(uuid())

  googleId  String   @unique
  email     String   @unique
  name      String?
  avatarUrl String?

  createdAt DateTime @default(now())
}
model Admin {
  id        String   @id @default(uuid())

  googleId  String   @unique
  email     String   @unique
  name      String?
  avatarUrl String?

  createdAt DateTime @default(now())
}